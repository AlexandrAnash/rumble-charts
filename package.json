{
  "name": "rumble-charts",
  "version": "1.0.11",
  "description": "React charts components based on d3.js",
  "main": "lib/index.js",
  "scripts": {
    "build": "./node_modules/.bin/babel src --out-dir lib",
    "test": "npm run check && npm run build && ./node_modules/.bin/jest --coverage",
    "start": "./node_modules/.bin/babel --watch src --out-dir lib & ./node_modules/.bin/jest --watch",
    "check": "./node_modules/.bin/eslint src/* tests/*",
    "gh-pages": "./node_modules/.bin/gh-pages -d styleguide",
    "styleguide-server": "styleguidist server",
    "styleguide-build": "NODE_ENV=production styleguidist build",
    "storybook-server": "./node_modules/.bin/start-storybook -p 9001",
    "storybook-build": "./node_modules/.bin/build-storybook -o storybook",
    "publish-docs": "npm run styleguide-build && npm run gh-pages",
    "publish-patch": "npm test && npm version patch && npm publish",
    "publish-minor": "npm test && npm version minor && npm publish",
    "publish-major": "npm test && npm version major && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RumbleInc/rumble-js-charts.git"
  },
  "keywords": [
    "react",
    "d3",
    "chart",
    "react-component",
    "bar chart",
    "pie chart",
    "line chart",
    "tags cloud",
    "scatter plot",
    "animated charts",
    "graph",
    "visualization",
    "svg"
  ],
  "author": "Alexey Volkov <alexey@rumble.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RumbleInc/rumble-js-charts/issues"
  },
  "homepage": "https://github.com/RumbleInc/rumble-js-charts#readme",
  "dependencies": {
    "d3": "^3.5.17",
    "d3-cloud": "^1.2.1",
    "d3-timer": "^1.0.0",
    "lodash": "^4.13.1"
  },
  "devDependencies": {
    "@kadira/storybook": "1.36.0",
    "babel-cli": "^6.10.1",
    "babel-jest": "^13.0.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react-hmre": "^1.1.1",
    "canvas": "^1.4.0",
    "enzyme": "^2.3.0",
    "eslint": "^3.0.0",
    "eslint-plugin-react": "^5.2.2",
    "gh-pages": "^0.11.0",
    "jest": "^13.0.0",
    "jest-cli": "^13.0.0",
    "jsdom": "^9.3.0",
    "react": "0.14.x || 15.0.x || 15.1.x || 15.2.x",
    "react-addons-test-utils": "0.14.x || 15.0.x || 15.1.x || 15.2.x",
    "react-dom": "0.14.x || 15.0.x || 15.1.x || 15.2.x",
    "react-styleguidist": "^2.3.1"
  },
  "peerDependencies": {
    "react": "0.14.x || 15.0.x || 15.1.x || 15.2.x",
    "react-dom": "0.14.x || 15.0.x || 15.1.x || 15.2.x"
  },
  "jest": {
    "automock": false,
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testDirectoryName": "tests",
    "testPathDirs": [
      "<rootDir>/tests"
    ],
    "unmockedModulePathPatterns": [
      "react",
      "react-dom",
      "react-addons-test-utils",
      "fbjs",
      "enzyme",
      "cheerio",
      "htmlparser2",
      "lodash",
      "domhandler",
      "object.assign",
      "define-properties",
      "function-bind",
      "object-keys",
      "object.values",
      "es-abstract"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/fakeData/",
      "[^_spec]\\.js"
    ],
    "setupTestFrameworkScriptFile": "./tests/init.js"
  }
}
